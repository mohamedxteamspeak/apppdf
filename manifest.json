    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "icons/screenshot1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "الشاشة الرئيسية"
    }
  ],
  "shortcuts": [
    {
      "name": "استخراج من PDF",
      "short_name": "PDF",
      "description": "استخراج الصور من ملف PDF",
      "url": "/index.html?mode=pdf",
      "icons": [
        {
          "src": "icons/icon-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "تحويل صور",
      "short_name": "صور",
      "description": "تحويل الصور إلى PDF",
      "url": "/index.html?mode=images",
      "icons": [
        {
          "src": "icons/icon-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/index.html",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp"]
      }
    }
  ],
  "share_target": {
    "action": "/index.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "files",
          "accept": ["application/pdf", "image/*"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "display_override": ["standalone", "minimal-ui"],
  "prefer_related_applications": false,
  "related_applications": []
}
