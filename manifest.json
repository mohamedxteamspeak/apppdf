  "version": "7.0.0",
  "start_url": "/index.html",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#667eea",
  "background_color": "#0f0f23",
  "lang": "ar",
  "dir": "rtl",
  "categories": ["utilities", "productivity"],
  "icons": [
    {
